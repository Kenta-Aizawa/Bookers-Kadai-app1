<body>

<h2>Books</h2>
<table>
  <div class="tr">
    <div class="title-title">Title</div>
    <div class="body-body">Body</div>
    <div class="three"></div>
  </div>

  <% @books.each do |book| %>
    <div class="tr">
      <div class="title-title"><%= book.title %></div>
      <div class="body-body"><%= book.body %></div>
      <div class="three"><%= link_to "Show", book_path(book) %></div>
      <div class="three"><%= link_to "Edit", edit_book_path(book) %></div>
      <div class="three"><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></div>
    </div>
  <% end %>
</table>

<h2>New book</h2>

<%= form_with model: @book, local: true do |f| %>

    <% if @book.errors.any? %>
    <div class="error">
      <div class="error-message"><%= @book.errors.count %>errors prohibited this book from being saved:<br></div>
      <% @book.errors.full_messages.each do |message| %>
        <ul class="msg">
          <li class="msg-msg"><%= message %></li>
        </ul>
      <% end %>
    </div>
    <% end %>

    <div>Title</div>
    <div class="field"><%= f.text_field :title %></div>
    <div>Body</div>
    <div class="body"><%= f.text_area :body %></div>
    <div class="submit"><%= f.submit "Create Book" %></div>

<% end %>

</body>
