<body>
<h1>Editing book</h1>

<%= form_with model:@book, local:true do |f| %>

   <% if @book.errors.any? %>
      <div class="error">
        <div class="error-message"><%= @book.errors.count %>errors prohibited this book from being saved:<br></div>
        <% @book.errors.full_messages.each do |message| %>
          <ul class="msg">
            <li class="msg-msg"><%= message %></li>
          </ul>
        <% end %>
      </div>
   <% end %>

    <div>Title</div>
    <div class="field"><%= f.text_field :title %></div>
    <div>Body</div>
    <div class="body"><%= f.text_area :body %></div>
    <div class="submit"><%= f.submit "Update Book" %></div>

<% end %>

 <%= link_to "Show",book_path(@book.id)%>
 <%= link_to "Back", books_path %>

</body>