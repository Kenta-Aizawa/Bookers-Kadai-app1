<body>
<h1>Editing book</h1>
<%= form_with model:@book, local:true do |f| %>

  <% if @book.errors.any? %>
   <div class="error" >
      <h2 class="error-message"><%= pluralize(@book.errors.count, "error") %>prohibited this book from being saved:</h2> <br>
      <% @book.errors.full_messages.each do |msg| %>
         <ul class="msg">
           <li class="msg-msg"><%= msg %></li>
         </ul><br>
      <% end %>
   </div>
   <% end %>

  <div>Title</div>
  <div class="field"><%= f.text_field :title %></div>
  <div>Body</div>
  <div class="body"><%= f.text_area :body %></div>
  <div class="submit"><%= f.submit "Update Book" %></div>

<% end %>

 <a class="show"><%= link_to "Show",book_path(@book.id)%></a>
 <a href="/books">Back</a>

</body>